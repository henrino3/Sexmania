<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="meltwater.org.sexmania.Kamasutra"
    tools:showIn="@layout/activity_kamasutra">

    <meltwater.org.sexmania.PagerContainer
        android:id="@+id/pager_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6dp"
        android:layout_above="@+id/relativeLayout">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal" />

    </meltwater.org.sexmania.PagerContainer>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/pager_container"
        android:layout_alignStart="@+id/pager_container"
        android:id="@+id/relativeLayout">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/left"
            android:elevation="0dp"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom|right"

            android:src="@drawable/left" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/right"
            android:elevation="0dp"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:src="@drawable/right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>




</RelativeLayout>
